      originalPrice: product.discount_percentage ? product.price : undefined,
      rating: 4.5,
      reviews: Math.floor(Math.random() * 100) + 10,
      isNew: new Date(product.created_at).getTime() > Date.now() - 30 * 24 * 60 * 60 * 1000,
      isPopular: product.calculated_price < product.price,
      isBestseller: product.discount_percentage && product.discount_percentage > 10,
      origin: product.origin_country?.name || 'Невідомо',
      material: product.material || 'Не вказано',
      certification: [],
      features: [],
      tags: [],
      inStock: product.stock_status === 'in_stock',
      stockLevel: product.stock_status === 'in_stock' ? 'high' : product.stock_status === 'low_stock' ? 'low' : 'medium',
      imageUrl: product.images && product.images.length > 0 
        ? product.images[0].image 
        : 'https://images.unsplash.com/photo-1606811841689-23dfddce3e95?w=600&q=80',
      gallery: product.images?.map(img => img.image),
    }));
  }, [productsData]);

  const total = productsData?.total || 0;
  const categories = categoriesData?.results || [];
  const manufacturers = manufacturersData?.results || [];
  const countries = countriesData?.results || [];

  const sortOptions = [
    { value: 'popular', label: 'За популярністю' },
    { value: 'price-low', label: 'Ціна ↑' },
    { value: 'price-high', label: 'Ціна ↓' },
    { value: 'rating', label: 'За рейтингом' },
    { value: 'name', label: 'За алфавітом' },
    { value: 'new', label: 'Новинки спочатку' }
